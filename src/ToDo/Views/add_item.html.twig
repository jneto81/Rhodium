{% extends 'Main/Views/layout.html.twig' %}

{% block content %}
	<div class="row fluid">
		<div class="col-lg-12">
			<form action="{{ app.request.baseURL }}/item/new/post" method="post">
		    	
		    	<br>

			    <div>
			    	<input type="text" name="title" placeholder="Title" class="form-control">	
			    </div>
				
				<br>

				<div>
					<textarea name="description" placeholder="Description" class="form-control" id="" cols="30" rows="10"></textarea>
				</div>

				<br>

				<div>
					<input type="date" name="due" class="form-control">
				</div>

				<br>

				<div>
					<label for="is_done">Complete</label>
					<input type="checkbox" name="is_done" class="form-control">
				</div>

			    <input type="submit" name="submit" class="form-control" />
			</form>
		</div>
	</div>		
{% endblock %}